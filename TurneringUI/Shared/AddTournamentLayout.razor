@using TurneringLibrary.Models;
@using TurneringUI.Component
@inherits LayoutComponentBase

<PageTitle>TurneringUI</PageTitle>

<div>
  <main class="add-tour-layout">
    <div class="add-teams-layout">
      <AddTournamentComponent TournamentMatches="NewFormat" />
    </div>
    <article class="content px-4">
      <CascadingValue Value="TournamentFormat">
        @Body
      </CascadingValue>

    </article>
  </main>
</div>


@code {
  private List<MatchUpModel> TournamentFormat;

  private void NewFormat(List<MatchUpModel> tournament)
  {
    TournamentFormat = tournament;
  }

}